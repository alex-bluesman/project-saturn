#include <basetypes>

namespace saturn {
namespace bsp {

// Data types used for configuration:
enum class OS_Type
{
	Default,
	Linux
};

struct OS_Storage_Entry
{
	uint64_t sourcePA;
	uint64_t targetPA;
	size_t size;
};

}; // bsp
}; // namespace saturn
