#pragma once

#include <immu>

namespace saturn {

namespace core {
	extern IMemoryManagementUnit* Saturn_MMU;
}; // namespace core

class MMap {
public:
	MMap(uint64_t base_addr, size_t size, MMapType type)
		: Base(base_addr)
		, Size(size)
		, Type(type)
	{
		core::Saturn_MMU->MemoryMap(Base, Size, Type);
	};

	~MMap()
	{
		core::Saturn_MMU->MemoryUnmap(Base, Size);
	};

private:
	uint64_t	Base;
	size_t		Size;
	MMapType	Type;
};

}; // namespace saturn
