#pragma once

#include <basetypes>

namespace saturn {
namespace device {

class IUartDevice
{
public:
	virtual void Rx(uint8_t *buff, size_t len) = 0;
	virtual void Tx(uint8_t *buff, size_t len) = 0;
};

class IUartConsole
{
public:
	virtual bool UartRX(char sym) = 0;
	virtual void RegisterUart(IUartDevice&) = 0;
};

}; // namespace device
}; // namespace saturn
