#pragma once

#include <basetypes>

namespace saturn {

template<typename T>
static inline T Read(uint64_t addr)
{
	volatile T *paddr = (T *)addr;
	return *paddr;
}

template<typename T>
static inline void Write(uint64_t addr, T data)
{
	volatile T *paddr = (T *)addr;
	*paddr = data;
}

}; // namespace saturn
